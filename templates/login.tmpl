<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Blaise Web Access</title>
    <link rel="stylesheet" href="https://cdn.ons.gov.uk/sdc/design-system/31.4.0/css/main.css">
    <link rel="stylesheet" media="print" href="https://cdn.ons.gov.uk/sdc/design-system/31.4.0/css/print.css">
    <meta name="theme-color" content="#206095"/>
    <!-- Favicons -->
    <meta name="msapplication-config"
          content="https://cdn.ons.gov.uk/sdc/design-system/31.4.0/favicons/browserconfig.json">
    <link rel="icon" type="image/x-icon" href="https://cdn.ons.gov.uk/sdc/design-system/31.4.0/favicons/favicon.ico">
    <link rel="icon" type="image/png" href="https://cdn.ons.gov.uk/sdc/design-system/31.4.0/favicons/favicon-32x32.png"
          sizes="32x32">
    <link rel="icon" type="image/png" href="https://cdn.ons.gov.uk/sdc/design-system/31.4.0/favicons/favicon-16x16.png"
          sizes="16x16">
    <link rel="mask-icon" href="https://cdn.ons.gov.uk/sdc/design-system/31.4.0/favicons/safari-pinned-tab.svg"
          color="#000000">
    <link rel="apple-touch-icon" type="image/png"
          href="https://cdn.ons.gov.uk/sdc/design-system/31.4.0/favicons/apple-touch-icon.png" sizes="180x180">
    <link rel="manifest" href="https://cdn.ons.gov.uk/sdc/design-system/31.4.0/favicons/manifest.json">
</head>
<body>
<div class="page">
    <div class="page__content">
        <a class="skip__link" href="#main-content">Skip to main content</a>
        <header class="header " role="banner">
            <div class="header__top">
                <div class="container">
                    <div class="header__grid-top grid grid--gutterless grid--flex grid--between grid--vertical-center grid--no-wrap ">
                        <div class="grid__col col-auto">
                            <a class="header__logo-link" href="/">
                                <picture>
                                    <source alt="Office for National Statistics logo"
                                            media="(max-width: 499px)"
                                            srcset="https://cdn.ons.gov.uk/sdc/design-system/31.4.0/img/ons-logo-stacked-pos-en.svg">
                                    <img alt="Office for National Statistics logo"
                                         class="header__logo"
                                         src="https://cdn.ons.gov.uk/sdc/design-system/31.4.0/img/ons-logo-stacked-pos-en.svg">
                                </picture>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="header__main">
                <div class="container">
                    <div class="grid grid--gutterless grid--flex grid--between grid--vertical-center grid--no-wrap">
                        <div class="grid__col col-auto u-flex-shrink">
                            <div class="header__title">Blaise Web Access</div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div class="page__container container " style="min-height: calc(67vh)">
            <div class="grid">
                <div class="grid__col col-8@m">
                    <main id="main-content" class="page__main ">
                        {{ if .error}}
                        <div aria-labelledby="error-summary-title" role="alert" tabindex="-1" autofocus="autofocus"
                             class="panel panel--error">
                            <div class="panel__header">
                                <h2 id="error-summary-title" data-qa="error-header" class="panel__title u-fs-r--b">
                                    There is a problem with this page
                                </h2>
                            </div>
                            <div class="panel__body">
                                <p class="">
                                    <a href="#uac" class="list__link js-inpagelink">{{ .error }}</a>
                                </p>
                            </div>
                        </div>
                        {{ end }}

                        <h1 class="u-mt-l">Start survey</h1>
                        <form method="post" action="/auth/login">
                            <div class="panel panel--{{ if .error}}error{{else}}info{{end}} panel--no-title u-mb-s">
                                <span class="u-vh">Important information: </span>
                                <div class="panel__body">

                                    {{ if .error}}
                                    <p class="panel__error">
                                        <strong>{{ .error }}</strong>
                                    </p>
                                    {{ end }}

                                    <div class="field question__answer">
                                        <label class="label  label--with-description " for="uac">
                                            Enter your 12-character access code
                                        </label>
                                        <span id="description-hint" class="label__description  input--with-description">
                                            Keep this code safe. You will need to enter it every time you access your survey
                                        </span>
                                        <input type="text" id="uac"
                                               class="input input--text input-type__input uac__input js-uac u-mb-xs"
                                               name="uac" maxlength="19" data-group-size="4"
                                               autocomplete="off"
                                               autofocus
                                               autocapitalize="characters" aria-describedby="description-hint"/>
                                        <a class="u-fs-s" href="https://pointerpointer.com">Where to find your access
                                            code</a>
                                    </div>
                                </div>
                            </div>
                            <div class="panel panel--bare u-mb-s">
                                    <span class="panel__icon u-fs-">
                                      <svg class="svg-icon" viewBox="0 0 10 13" xmlns="http://www.w3.org/2000/svg"
                                           focusable="false">
                                        <path d="M12.25,6h-.72V4.49a3.5,3.5,0,0,0-7,0V6H3.75A.77.77,0,0,0,3,6.75v6.5a.77.77,0,0,0,.75.75h8.5a.77.77,0,0,0,.75-.75V6.75A.77.77,0,0,0,12.25,6ZM5.54,4.49a2.5,2.5,0,1,1,5,0V6h-5ZM9,11.66a.3.3,0,0,1-.26.34H7.29A.29.29,0,0,1,7,11.69v0l.39-1.82a1,1,0,1,1,1.4-.18.77.77,0,0,1-.18.18Z"
                                              transform="translate(-3 -0.99)"/>
                                      </svg>
                                    </span>
                                <div class="panel__body">
                                    Your personal information is protected by law and will be kept confidential.
                                </div>
                            </div>
                            <button type="submit" class="btn u-mb-xl">
                                <span class="btn__inner">Access survey</span>
                            </button>
                        </form>
                    </main>
                </div>
            </div>
        </div>
        {{ template "footer" }}
    </div>
</div>
</body>
</html>
